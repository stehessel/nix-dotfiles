super + {Return, c, e, v}
	$TERMINAL { , -e calcurse, -e neomutt, -e vifm }

super + space
	launcher

super + Escape
	pkill -USR1 -x sxhkd

super + Insert
	showclip

XF86MonBrightnessDown
	xbacklight -dec 10
XF86MonBrightnessUp
	xbacklight -inc 10

XF86AudioMute
	lmc mute
XF86AudioLowerVolume
	lmc down 5
shift + XF86AudioLowerVolume
	lmc down 10
control + XF86AudioLowerVolume
	lmc down 1
XF86AudioRaiseVolume
	lmc up 5
shift + XF86AudioRaiseVolume
	lmc up 10
control + XF86AudioRaiseVolume
	lmc up 1
XF86AudioNext
	lmc next
XF86AudioPlay
	lmc toggle
XF86AudioPrev
	lmc prev
XF86AudioStop
	lmc toggle

super + shift + Return
	betterlockscreen -l
super + shift + x
	prompt "Shutdown computer?" "shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "reboot"

# Search with Duckduckgo
super + F1
	ducksearch
super + F2
	feh --bg-max --randomize ~/Dropbox/backgrounds/*
