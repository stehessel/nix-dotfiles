{
  "adapters": {
    "debugpy-docker": {
      "port": "6000",
      "variables": {
        "container": {
          "shell": "docker ps --filter 'name=raq' -q"
        },
        "port": "6000"
      },
      "launch": {
        "remote": {
          "container": "${container}",
          "launchCommmand": [
            "/home/docker/venv3.6/bin/python",
            "-m",
            "debugpy",
            "--listen",
            "0.0.0.0:${port}",
            "--wait-for-client",
            "%CMD%"
          ]
        }
      },
      "attach": {
        "remote": {
          "container": "${container}",
          "pidCommand": [
            "pgrep",
            "-fo",
            "debugpy"
          ],
          "attachCommand": [
            "/home/docker/venv3.6/bin/python",
            "-m",
            "debugpy",
            "--listen",
            "0.0.0.0:${port}",
            "--pid",
            "%PID%"
          ]
        }
      }
    }
  },
  "configurations": {
    "pytest - local": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "type": "python",
        "python": "${HOME}/miniconda3/envs/raq-env/bin/python",
        "module": "pytest",
        "args": [
          "--rootdir=${workspaceRoot}",
          "--no-cov",
          "--capture=no",
          "--verbose",
          "${file}"
        ],
        "cwd": "${workspaceRoot}",
        "console": "integratedTerminal"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "Y",
          "userUnhandled": ""
        }
      }
    },
    "pytest - docker launch": {
      "adapter": "debugpy-docker",
      "remote-request": "launch",
      "remote-cmdLine": "-m pytest ${file}",
      "configuration": {
        "request": "attach",
        "pathMappings": [
          {
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "${workspaceRoot}"
          }
        ]
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "Y",
          "userUnhandled": ""
        }
      }
    },
    "pytest - docker attach": {
      "adapter": "debugpy-docker",
      "default": true,
      "remote-request": "attach",
      "configuration": {
        "request": "attach",
        "pathMappings": [
          {
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "${workspaceRoot}"
          }
        ]
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "Y",
          "userUnhandled": ""
        }
      }
    }
  }
}
