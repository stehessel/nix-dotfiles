{
  "adapters": {
    "python-remote": {
      "port": "${port}",
      "launch": {
        "remote": {
          "container": "${container}",
          "runCommand": [
            "python",
            "-m",
            "debugpy",
            "--listen",
            "0.0.0.0:${port}",
            "--wait-for-client",
            "%CMD%"
          ]
        }
      }
    },
    "delay": "1000m"
  },
  "configurations": {
    "pytest - local": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "type": "python",
        "python": "python",
        "module": "pytest",
        "args": ["${test_args}", "--verbose"],
        "cwd": "${cwd}",
        "console": "integratedTerminal"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "Y",
          "userUnhandled": ""
        }
      }
    },
    "pytest - docker": {
      "adapter": "python-remote",
      "remote-request": "launch",
      "remote-cmdLine": ["-m", "pytest", "${test_args}", "--verbose"],
      "configuration": { "request": "attach" },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "Y",
          "userUnhandled": ""
        }
      }
    }
  }
}
