{
  "coc.preferences.colorSupport": false,
  "coc.preferences.formatOnSaveFiletypes": ["lua", "python", "rust"],
  "suggest.numberSelect": false,
  "suggest.maxCompleteItemCount": 20,
  "suggest.triggerCompletionWait": 50,
  "codeLens.enable": false,
  "explorer.file.tabCD": false,
  "explorer.git.showIgnored": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.openAction.for.directory": "",
  "explorer.previewAction.onHover": false,
  "python.formatting.provider": "black",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "clojure-lsp": {
      "command": "clojure-lsp",
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj", ".git/"],
      "additionalSchemes": ["jar", "zipfile"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["*"]
    },
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "sourcery": {
      "command": "sourcery",
      "args": ["lsp"],
      "filetypes": ["python"],
      "initializationOptions": {
        "token": "user_n80vzPEXsMA5mzvpZ25FPpNqbMGX_F_V696MKkMbrQtU9B7ZFj390TX8_GI",
        "extension_version": "coc.vim",
        "editor_version": "vim"
      },
      "settings": {
        "sourcery": {
          "token": "user_n80vzPEXsMA5mzvpZ25FPpNqbMGX_F_V696MKkMbrQtU9B7ZFj390TX8_GI",
          "metricsEnabled": true
        }
      }
    }
  }
}
