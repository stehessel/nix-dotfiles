{
  "coc.preferences.colorSupport": false,
  "suggest.numberSelect": false,
  "suggest.maxCompleteItemCount": 20,
  "suggest.triggerCompletionWait": 50,
  "codeLens.enable": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.file.tabCD": false,
  "explorer.openAction.for.directory": "",
  //"snippets.userSnippetsDirectory": "~/.config/nvim/plugged/vim-snippets/UltiSnips",
  //"Lua.diagnostics.globals": ["vim"],
  //"lua.useSumnekoLs": true,
  //"lua.version": "LuaJIT",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "clojure-lsp": {
      "command": "clojure-lsp",
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj", ".git/"],
      "additionalSchemes": ["jar", "zipfile"]
    },
    //"diagnostic-languageserver.filetypes": {
    //  "sh": "shellcheck"
    //},
    //"diagnostic-languageserver.formatFiletypes": {
    //  "json": "prettier",
    //  "lua": "luafmt",
    //  "python": "black",
    //  "sh": "shfmt",
    //  "sql": "pg_format",
    //  "yaml": "prettier"
    //},
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
	},
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
	},
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    //"sonarlint": {
    //  "command": "java",
