{
  "coc.preferences.colorSupport": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "rust"
  ],
  "suggest.numberSelect": false,
  "suggest.maxCompleteItemCount": 20,
  "suggest.triggerCompletionWait": 50,
  "codeLens.enable": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.file.tabCD": false,
  "explorer.openAction.for.directory": "",
  "python.analysis.memory.keepLibraryAst": true,
  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "python.jediMemoryLimit": -1,
  "python.autoComplete.extraPaths": [
    "~/miniconda3/lib/python3.7/site-packages"
  ],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
	"--disable=no-self-argument, no-self-use, bad-continuation",
    "--extension-pkg-whitelist=pydantic",
    "--ignored-classes=TablesCollection"
  ],
  "python.sortImports.path": "isort",
  "snippets.userSnippetsDirectory": "~/.config/nvim/plugged/vim-snippets/UltiSnips",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "haskell": {
      "command": "hie-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [
        "nix"
      ]
    }
  }
}
